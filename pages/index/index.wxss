page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.nav-tabs {
  width: 100%;
  height: 120rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  box-shadow: 0 -6rpx rgba(30, 30, 30, .04);
  z-index: 1005;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fcfcfc;
}

.tab-text {
  font-size: 30rpx;
  color: #c5c6c5;
  margin-bottom: 10rpx;
}

.iconPath {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  top: 10rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 60rpx;
  text-align: center;
  flex: 1;
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 60rpx;
  text-align: center;
  color: black;
  flex: 1;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}

.au-btn {
  border-radius: 50%;
  position: absolute;
  left: 316rpx;
  top: 0;
  margin-top: -42rpx;
  background-color: rbga(0, 0, 0, 0);
}

.add-btn {
  position: absolute;
  left: 50%;
  top: 0;
  width: 120rpx;
  height: 120rpx;
