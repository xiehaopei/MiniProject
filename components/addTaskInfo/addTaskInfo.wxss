.addTaskInfo {
  background-color: #fefffe;
}

.add-input {
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.task-name {
  caret-color: #fd79a8;
  width: 100%;
  height: 70rpx;
  margin: 4rpx 20rpx 10rpx 0;
}

.add-btn {
  width: 130rpx !important;
  height: 70rpx;
}

.add-btn text {
  font-size: 34rpx;
  position: absolute;
  top: 0;
  left: 22%;
}

.more-setting {
  border-radius: 20rpx;
  width: 140rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #fd79a8;
  color: #fefffe;
  padding: 10rpx;
}

.taskItem {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
}

.radio {
  margin-right: 30rpx;
}

.selector {
  width: 500rpx;
}

.textAreaItem {
  display: flex;
  margin-top: 20rpx;
}

.taskDescription {
  caret-color: #fd79a8;
  width: 500rpx;
  height: 300rpx;
  border: 2rpx solid #bdc3c7;
  margin-top: 10rpx;
}

.btn-area {
  margin-top: 50rpx;
  display: flex;
}

.btn-area button {
  width: 200rpx !important;
}

.reset {
  border: 2rpx solid #bdc3c7;
  color: #27ae60;
}