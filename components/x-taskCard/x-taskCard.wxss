.unfinish {
  height: 50rpx;
  background-color: #dcdcdc;
  padding: 5rpx 20rpx 5rpx;
  font-size: 34rpx;
  margin-bottom: 20rpx;
  color: #2c2c2c;
  display: flex;
  justify-content: space-between;
}

.task-card {
  margin: 0 20rpx;
  border: 1rpx solid #dddddd;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #d4d4d4;
  margin-bottom: 20rpx;
}

.task_item {
  height: 100rpx;
  position: relative;
  border-bottom: 1rpx solid #dddddd;
}

.item_contain {
  height: 100rpx;
  width: 560rpx;
  font-size: 40rpx;
  position: absolute;
  left: 100rpx;
  top: 25rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}